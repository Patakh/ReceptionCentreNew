@model ReceptionCentreNew.Domain.Concrete.data_appeal_email
<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title mt-0">Просмотр письма</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @if (Model.data_appeal_id == null)
            {
                if (User.IsInRole("superadmin") || User.IsInRole("admin") || User.IsInRole("operator"))
                {
                    <div class="col-sm-12 text-right">
                        <button type="submit" onclick="window.open('@Url.Action("NewAppeal", "Appeal", new { emailId = Model.id })')" class="btn btn-inverse waves-effect waves-light btn-sm "> Сформировать новое обращение <i class="ti-file m-l-5"></i></button>
                    </div>
                }
            }
            else
            {
                <div class="col-sm-12 text-right">
                    <button type="submit" onclick="window.open('@Url.Action("AppealInfo", "Appeal", new {number = Model.data_appeal.number_appeal})')" class="btn btn-inverse waves-effect waves-light btn-sm "> Перейти к обращению <i class="ti-file m-l-5"></i></button>
                </div>
            }
            <div class="card-box m-t-20">
                <h4 class="m-t-0 font-18"><b>@Model.caption</b></h4>
                <hr>
                <div class="media m-b-30">
                    <div class="media-body">
                        <span class="media-meta pull-right">@Model.date_email</span>
                        <h4 class="text-primary font-16 m-0">@Model.email_</h4>
                        <small class="text-muted">From: @Model.email_</small>
                    </div>
                </div>

                <p>@(new HtmlString(Model.text_email))</p>

                <hr>

                @*<h4 class="font-16"> <i class="fa fa-paperclip m-r-10 m-b-10"></i> Вложения <span></span> </h4>*@

                <div class="row">
                    <div class="col-sm-2 col-xs-4">

                    </div>
                    <div class="col-sm-2 col-xs-4">

                    </div>
                    <div class="col-sm-2 col-xs-4">

                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary waves-effect waves-light" data-dismiss="modal">Закрыть</button>            
        </div>
        </div>
    </div>


