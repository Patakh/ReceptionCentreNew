@model ReceptionCentreNew.Models.ReferenceViewModel
<div class="card-box p-0">
    <div class="row">
        <div class="col-sm-10">

        </div>
        <div class="col-sm-2">
            <div class="text-right">
                @using (Ajax.BeginForm("PartialModalAddSurveyQuestion", "Reference", null, new AjaxOptions { UpdateTargetId = "newModal", OnSuccess = "$('#newModal').modal('show');" }, new { @class = "form-submit" }))
                {
                    <button type="submit" class="btn btn-mfc waves-effect waves-light"> Добавить <i class="fa fa-plus m-l-5"></i></button>
                }
            </div>
        </div>
    </div>

    @if (Model.SprSurveyQuestionList.Any())
    {
        <div class="table-responsive">
            <table id="SurveyQuestionsTable" class="journal-incoming table route-table table-td-sm table-vertical-middle mb-0" data-page-size="10" data-limit-navigation="5">
                <div class="input-group">
                    <div class="input-group-prepend align-items-center">
                        <span class="px-3 text-secondary" id="basic-addon1"><i class="fa fa-search"></i></span>
                    </div>
                    <input type="text" id="searchTextSurveyQuestions" class="form-control pl-0 border-0" placeholder="Поиск ..." aria-label="Username" aria-describedby="basic-addon1" autocomplete="on">
                    <button id="showRemoves" type="button" class="btn btn-link text-custom" style="padding-left:10px; padding-right:10px;"><i class="@(ViewBag.IsRemove ? "ion-ios7-trash" : "ion-ios7-trash-outline") m-l-5" style="font-size: 20px;" data-placement="bottom" data-toggle="tooltip" data-original-title="@(ViewBag.IsRemove ? "Скрыть удаленные" : "Показать удаленные")"></i></button>
                </div>
                
                <tbody>
                    @foreach (var item in Model.SprSurveyQuestionList)
                    {
                        <tr data-survey-question-id="@item.id" class="@(item.is_remove == true ? "danger" : "")">
                            <td class="number-row p-l-20-important">
                                @((Model.PageInfo.CurrentPage - 1) * Model.PageInfo.ItemsPerPage + ++Model.PageInfo.NumberRow)
                            </td>
                            <td>
                                <span>@Html.DisplayFor(i => item.question)</span><br>
                            </td>                             
                            <td class="actions text-right">
                                <button type="button" class="btn btn-link" style="font-size: 22px;line-height: 22px;" data-tooltip-info='{"employees_fio": @Json.Encode(item.employees_name_add), "employees_fio_modifi": @Json.Encode(item.employees_name_modify ?? "-"), "date_add": "@Html.DisplayFor(i => item.date_add)", "date_modify": "@Html.DisplayFor(i => item.date_modify)", "is_remove": @Json.Encode(item.is_remove)}'>
                                    <i class="ion-ios7-information-outline"></i>
                                </button>
                                @using (Ajax.BeginForm("PartialTableSurveyAnswers", "Reference", new { surveyQuestionId = item.id }, new AjaxOptions { UpdateTargetId = "newModal", OnSuccess = "$('#newModal').modal('show');" }, new { @class = "form-submit" }))
                                {
                                    <button class="on-default btn btn-link" data-placement="top" data-toggle="tooltip" data-original-title="Варианты ответов">
                                        <i class="md md-people-outline"></i>
                                        <span class="badge badge-xs">@(item.spr_survey_answer.Any() ? (object)item.spr_survey_answer.Count : null)</span>
                                    </button>
                                }
                                @if (User.IsInRole("superadmin") || User.IsInRole("admin"))
                                {
                                    if (item.is_remove != true)
                                    {
                                        using (Ajax.BeginForm("PartialModalEditSurveyQuestion", "Reference", new { FormMethod = "POST", questionId = item.id }, new AjaxOptions { UpdateTargetId = "newModal", OnSuccess = "$('#newModal').modal('show');" }, new { @class = "form-submit" }))
                                        {
                                            <button class="btn btn-link edit-row"><i class="ion-edit"></i></button>
                                        }
                                        <button class="btn btn-link remove-row"><i class="ion-trash-b"></i></button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-link recovery-row" data-placement="top" data-toggle="tooltip" data-original-title="Восстановление"><i class="fa fa-history"></i></button>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="foot-row">
                        <td colspan="2" class="text-left">
                            <div class="text-muted divider">Найдено  <span id="filter_count"></span> из <span id="tr_count"></span> записей</div>
                        </td>
                        <td colspan="2">
                            <div class="text-right">
                                <ul class="pagination pagination-split footable-pagination justify-content-end m-t-5 m-b-5"></ul>
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    }
    else
    {
        <div class="alert-no-record">
            <span style="color: #00545c;"><strong><i class="icon-info"></i></strong> Нет данных </span>
        </div>
    }
</div>

<script>
    $(document).ready(function () {
        var filtering = $('#SurveyQuestionsTable');
        filtering.footable();
        $('#SurveyQuestionsTable #filter_count').text($('#SurveyQuestionsTable.footable tbody tr:not(.footable-filtered)').length);
        $('#SurveyQuestionsTable #tr_count').text($('#SurveyQuestionsTable.footable tbody tr').length);

        // Search input
        $('#searchTextSurveyQuestions').keyup(function (evt) {
            evt.preventDefault();
            filtering.trigger('footable_filter', { filter: $(this).val() });
            $('#SurveyQuestionsTable #filter_count').text($('#SurveyQuestionsTable.footable tbody tr:not(.footable-filtered)').length);
        });
    });

     $(function () {
        $('[data-toggle="tooltip"]').tooltip({ trigger: 'hover' });
        $('button[data-tooltip-info]').tooltip({
            title: function () {
                var tooltipInfo = $(this).data('tooltipInfo');
                return "<div class='text-left'>" +
                    "<strong>Добавил</strong>: " + tooltipInfo['employees_fio'] + "</br>" +
                    "<strong>Дата добавления</strong>: " + tooltipInfo['date_add'] + "</br>" +
                    "<hr class='m-t-5 m-b-5'>" +
                    "<strong>Изменил</strong>: " + tooltipInfo['employees_fio_modifi'] + "</br>" +
                    "<strong>Дата изменения</strong>: " + tooltipInfo['date_modify'] + "</br>" +
                    "</div>";
            },
            html: true,
            placement: "left"
        });
    });

    $('#showRemoves').click(function () {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("PartialTableSurveyQuestions", "Reference")',
            data: { isRemove: '@(!ViewBag.IsRemove)' },
            success: function (data) {
                $('#surveyQuestionContainer').html(data);
            }
        });
    });

    $('#surveyQuestionContainer table td button.recovery-row').click(function () {
        var questionId = $(this).closest('tr').data('questionId');
        var paramObject = {
            url: '@Url.Action("SubmitSurveyQuestionRecovery", "Reference")',
            params: { questionId: questionId },
            onSuccess: function (data) {
                $('#surveyQuestionContainer').html(data);
            }
        }
        removeRecovery(paramObject);
    });

    $('#surveyQuestionContainer table td button.remove-row').click(function () {
        var questionId = $(this).closest('tr').data('questionId');
        console.log(questionId);
        $.ajax({
            type: 'POST',
            url: '@Url.Action("SubmitSurveyQuestionDelete", "Reference")',
            data: { questionId: questionId },
            success: function (data) {
                successDelete();
                $('#surveyQuestionContainer').html(data);
            }
        });
    });
    
    // Добавляем возможность выбора строки в таблице
    $('.route-table tr:not(.thead-row, .foot-row)').click(function () {
        $(this).siblings('tr:not(.thead-row)').removeClass('active');
        $(this).addClass('active');
    });
</script>
