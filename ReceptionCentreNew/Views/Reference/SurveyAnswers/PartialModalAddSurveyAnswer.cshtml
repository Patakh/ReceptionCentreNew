@model ReceptionCentreNew.Domain.Concrete.spr_survey_answer

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title mt-0">Добавление вопроса</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @using (Ajax.BeginForm("SubmitSurveyAnswerSave", "Reference", Model, new AjaxOptions { UpdateTargetId = "newModal", OnSuccess = "successAdd();" }, new { @id = "AddSurveyAnswerForm", @class = "form-horizontal" }))
            {
                @Html.HiddenFor(model=>model.spr_survey_question_id)
                <div class="form-group form-group-sm">
                    <div class="row">
                        @Html.LabelFor(model => model.answer, new Dictionary<string, object> { { "class", "col-md-2 control-label text-right" } })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.answer, new Dictionary<string, object> { { "class", "form-control required" }, { "placeholder", Html.DisplayNameFor(model => model.answer) } })
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="modal-footer">
            @using (Ajax.BeginForm("PartialTableSurveyAnswers", "Reference", new { surveyQuestionId = Model.spr_survey_question_id }, new AjaxOptions { UpdateTargetId = "newModal", OnSuccess = "$('#newModal').modal('show');" }, new { @class = "form-horizontal" }))
            {
                <button type="submit" class="btn btn-cancel waves-effect waves-light"><i class="fa fa-times m-r-5"></i> Отмена</button>
            }
            <button type="submit" form="AddSurveyAnswerForm" class="btn btn-success waves-effect waves-light"> Сохранить <i class="fa fa-check m-l-5"></i></button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->