@model ReceptionCentreNew.Data.Context.App.SprSurveyAnswer

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title mt-0">Изменение ответа</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @using (Ajax.BeginForm("SubmitSurveyAnswerSave", "Reference", Model, new AjaxOptions { UpdateTargetId = "newModal", OnSuccess = "successEdit();" }, new { @id = "EditSurveyAnswerForm", @class = "form-horizontal" }))
            {
                @Html.HiddenFor(model => model.SprSurveyQuestionId)
                <div class="form-group form-group-sm">
                    <div class="row">
                        @Html.LabelFor(model => model.Answer, new Dictionary<string, object> { { "class", "col-md-2 control-label text-right" } })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.Answer, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", Html.DisplayNameFor(model => model.Answer) } })
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="row">
                        @Html.LabelFor(model => model.CommenttModify, new Dictionary<string, object> { { "class", "col-md-2 control-label text-right" } })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.CommenttModify, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", Html.DisplayNameFor(model => model.CommenttModify) } })
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="modal-footer">
            @using (Ajax.BeginForm("PartialTableSurveyAnswers", "Reference", new { surveyQuestionId = Model.SprSurveyQuestionId }, new AjaxOptions { UpdateTargetId = "newModal", OnSuccess = "$('#newModal').modal('show');" }, new { @class = "form-horizontal" }))
            {
                <button type="submit" class="btn btn-cancel waves-effect waves-light"><i class="fa fa-times m-r-5"></i> Отмена</button>
            }
            <button type="submit" form="EditSurveyAnswerForm" class="btn btn-success waves-effect waves-light"> Сохранить <i class="fa fa-check m-l-5"></i></button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
