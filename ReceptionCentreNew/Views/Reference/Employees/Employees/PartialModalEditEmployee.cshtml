@model ReceptionCentreNew.Domain.Concrete.spr_employees
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.custom.validate.js"></script>
<script src="~/Content/plugins/bootstrap-select/dist/js/bootstrap-select.min.js" type="text/javascript"></script>
<style>
    .checkbox label {
        padding-left: 15px;
    }

        .checkbox label::before {
            height: 25px;
            width: 25px;
        }

        .checkbox label::after {
            font-size: 18px;
        }
</style>
<script>
    $(document).ready(function () {
        $(".select2").select2();
        $('#AddEmployeeForm').validate();
    });
</script>
<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title mt-0">Изменение данных сотрудника</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @using (Ajax.BeginForm("SubmitEmployeeSave", "Reference", Model, new AjaxOptions { UpdateTargetId = "employeesPillContainer", OnSuccess = "$('#newModal').modal('hide');" }, new { @id = "EditEmployeeForm", @class = "form-horizontal" }))
            {
                <div class="form-group row">
                    <label class="col-md-4 col-xl-4 col-form-label text-right">Должность</label>
                    <div class="col-md-6 col-xl-6">
                        @Html.DropDownListFor(model => model.spr_employees_job_pos_id, ViewBag.EmployeeJobPos as SelectList, new Dictionary<string, object> { { "class", "form-control select2" }, { "data-style", "btn-white btn-sm" } })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-xl-4 col-form-label text-right">Отдел</label>
                    <div class="col-md-6 col-xl-6">
                        @Html.DropDownListFor(model => model.spr_employees_department_id, ViewBag.EmployeeDepartments as SelectList, new Dictionary<string, object> { { "class", "form-control select2" }, { "data-style", "btn-white btn-sm" } })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-xl-4 col-form-label text-right">ФИО</label>
                    <div class="col-md-6 col-xl-6">
                        @Html.TextBoxFor(model => model.employees_name, new Dictionary<string, object> { { "class", "form-control required" }, { "placeholder", "Введите ФИО" }, { "required", "required" } })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 col-xl-4 col-form-label text-right"></label>
                    <div class="col-md-6 col-xl-6">
                        <div class="checkbox checkbox-custom">
                            @Html.CheckBoxFor(m => m.can_take_appeal)
                            @Html.LabelFor(m => m.can_take_appeal)
                        </div>
                    </div>
                </div>
                <h3 class="panel-title">Учетные данные</h3>
                <hr class="m-t-10" />
                <div class="form-group row">
                    <label class="col-md-4 col-xl-4 col-form-label text-right">Логин</label>
                    <div class="col-md-6 col-xl-6">
                        @Html.TextBoxFor(model => model.employees_login, new Dictionary<string, object> { { "class", "form-control required" }, { "placeholder", "Введите логин" } })
                    </div>
                </div>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-cancel waves-effect waves-light btn-block-xs" data-dismiss="modal"><i class="fa fa-times m-r-5"></i> Отмена</button>
            <button type="submit" form="EditEmployeeForm" class="btn btn-success waves-effect waves-light btn-block-xs"> Сохранить <i class="fa fa-check m-l-5"></i></button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->