@model ReceptionCentreNew.Models.EmployeeViewModel
   
<div class="card-box p-0">
    <div class="row">
        <div class="col-sm-10">

        </div>
        <div class="col-sm-2">
            <div class="text-right">
                @using (Ajax.BeginForm("PartialModalAddEmployee", "Reference", null, new AjaxOptions { UpdateTargetId = "newModal", OnSuccess = "$('#newModal').modal('show');" }, new { @class = "form-submit" }))
                {
                    <button type="submit" class="btn btn-mfc waves-effect waves-light"> Добавить <i class="fa fa-plus m-l-5"></i></button>
                }
            </div>
        </div>
    </div>
    @if (Model.SprEmployees.Any())
    {
        <div class="table">
            <table id="employeesTable" class="journal-incoming table route-table table-td-sm table-vertical-middle mb-0" data-page-size="10" data-limit-navigation="5">
                <div class="input-group">
                    <div class="input-group-prepend align-items-center">
                        <span class="px-3 text-secondary" id="basic-addon1"><i class="fa fa-search"></i></span>
                    </div>
                    <input type="text" id="searchTextEmployees" class="form-control pl-0 border-0" placeholder="Поиск ..." aria-label="Username" aria-describedby="basic-addon1" autocomplete="on">
                    <button id="showEmployeeRemoves" type="button" class="btn btn-link text-custom" style="padding-left:10px; padding-right:10px;"><i class="@(ViewBag.IsRemove ? "ion-ios7-trash" : "ion-ios7-trash-outline") m-l-5" style="font-size: 20px;" data-placement="bottom" data-toggle="tooltip" data-original-title="@(ViewBag.IsRemove ? "Скрыть удаленные" : "Показать удаленные")"></i></button>
                </div>
                <thead>
                    <tr>
                        <th class="number-row p-l-20-important" style="min-width:45px;">№</th>
                        <th>@Html.DisplayNameFor(model => model.SprEmployees.First().employees_name)</th>
                        <th>@Html.DisplayNameFor(model => model.SprEmployees.First().spr_employees_job_pos_id)</th>
                        <th>@Html.DisplayNameFor(model => model.SprEmployees.First().can_take_appeal)</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.SprEmployees)
                    {
                        <tr data-employee-id="@item.id" class="@(item.is_remove == true ? "danger" : "")">
                            <td class="number-row p-l-20-important">
                                @((Model.PageInfo.CurrentPage - 1) * Model.PageInfo.ItemsPerPage + ++Model.PageInfo.NumberRow)
                            </td>
                            <td>
                                @Html.DisplayFor(i => item.employees_name)
                            </td>
                            <td>
                                @Html.DisplayFor(i => item.spr_employees_job_pos.job_pos_name)
                            </td>
                            <td>
                                @(item.can_take_appeal == true ? "Да" : "Нет")
                            </td>
                            <td class="actions vertical-middle-important text-right">
                                <button type="button" class="btn btn-link" style="font-size: 22px;line-height: 22px;" data-tooltip-info='{"employees_fio": "@item.employees_name", "employees_login": "@item.employees_login", "employees_fio_add": @Json.Encode(item.employees_name_add), "employees_fio_modifi": @Json.Encode(item.employees_name_modify ?? "-"), "set_date": "@Html.DisplayFor(i => item.date_add)", "is_remove": @Json.Encode(item.is_remove)}'>
                                    <i class="ion-ios7-information-outline"></i>
                                </button>
                                @using (Ajax.BeginForm("PartialTableEmployeeRoles", "Reference", new { employeeId = item.id }, new AjaxOptions { UpdateTargetId = "newModal", OnSuccess = "$('#newModal').modal('show');" }, new { @class = "form-submit" }))
                                {
                                    <button class="on-default btn btn-link" data-placement="top" data-toggle="tooltip" data-original-title="Роли">
                                        <i class="md md-people-outline"></i>
                                        <span class="badge badge-xs">@(item.spr_employees_role_join.Any() ? (object)item.spr_employees_role_join.Count : null)</span>
                                    </button>
                                }
                                @if (User.IsInRole("superadmin") || User.IsInRole("admin"))
                                {
                                    if (item.is_remove != true)
                                    {
                                        using (Ajax.BeginForm("PartialModalEditEmployee", "Reference", new { employeeId = item.id }, new AjaxOptions { UpdateTargetId = "newModal", OnSuccess = "$('#newModal').modal('show');" }, new { @class = "form-submit" }))
                                        {
                                            <button class="edit-row btn btn-link" data-placement="top" data-toggle="tooltip" data-original-title="Изменение"><i class="ion-edit"></i></button>
                                        }
                                        <button class="remove-row btn btn-link" data-placement="top" data-toggle="tooltip" data-original-title="Удаление"><i class="ion-trash-b"></i></button>
                                    }
                                    else
                                    {
                                        <button class="recovery-row btn btn-link" data-placement="top" data-toggle="tooltip" data-original-title="Восстановление"><i class="fa fa-history"></i></button>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="foot-row">
                        <td colspan="2" class="text-left">
                            <div class="text-muted divider">Найдено  <span id="filter_count"></span> из <span id="tr_count"></span> записей</div>
                        </td>
                        <td colspan="3">
                            <div class="text-right">
                                <ul class="pagination pagination-split footable-pagination justify-content-end m-t-5 m-b-5"></ul>
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    }
    else
    {
        <div class="alert-no-record">
            <span style="color: #00545c;"><strong><i class="icon-info"></i></strong> Нет данных </span>
        </div>
    }
</div>

<script>
    $(document).ready(function () {
                var filtering = $('#employeesTable');
                filtering.footable();
                $('#employeesTable #filter_count').text($('#employeesTable.footable tbody tr:not(.footable-filtered)').length);
                $('#employeesTable #tr_count').text($('#employeesTable.footable tbody tr').length);

                // Search input
                $('#searchTextEmployees').keyup(function (evt) {
                    evt.preventDefault();
                    filtering.trigger('footable_filter', { filter: $(this).val() });
                    $('#employeesTable #filter_count').text($('#employeesTable.footable tbody tr:not(.footable-filtered)').length);
                });
            });

    $(function () {
        $('[data-toggle="tooltip"]').tooltip({ trigger: 'hover' });
        $('button[data-tooltip-info]').tooltip({
            title: function () {
                var tooltipInfo = $(this).data('tooltipInfo');
                return "<div class='text-left'>" +
                    "<strong>ФИО</strong>: " + tooltipInfo['employees_fio'] + "</br>" +
                    "<strong>Логин</strong>: " + tooltipInfo['employees_login'] + "</br>" +
                    "<hr class='m-t-5 m-b-5'>" +
                    "<strong>Добавил</strong>: " + tooltipInfo['employees_fio_add'] + "</br>" +
                    "<strong>Дата добавления</strong>: " + tooltipInfo['set_date'] + "</br>" +
                    "<hr class='m-t-5 m-b-5'>" +
                    "<strong>Изменил</strong>: " + tooltipInfo['employees_fio_modifi'] + "</br>" +
                    (tooltipInfo['is_remove'] ?
                        "<hr class='m-t-5 m-b-5'>" +
                        "<strong>Удалил</strong>: " + tooltipInfo['employees_fio_remove'] + "</br>" +
                        "<strong>Причина удаления</strong>: " + tooltipInfo['commentt_remove'] + "</br>" +
                        "<strong>Дата удаления</strong>: " + tooltipInfo['date_remove'] + "</br>" : "") +
                    "</div>";
            },
            html: true,
            placement: "left"
        });
    });

    $("#employeesPillContainer tbody > tr > td:not(.actions)").on("click", function () {
        var employeeId = $(this).closest('tr').data('employeeId');
        $.ajax({
            type: 'POST',
            url: 'PartialTableEmployeeRoles',
            data: { employeeId: employeeId },
            success: function (data) {
                $("#employeeRolesContainer").html(data);
            }
        });
    });
      

    $('#showEmployeeRemoves').click(function () {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("PartialTableEmployees", "Reference")',
            data: { search: $('#searchTextAnimals').val(), isRemove: '@(!ViewBag.IsRemove)' },
            success: function (data) {
                $('#employeesPillContainer').html(data);
            }
        });
    });

    $('#employeesPillContainer table td button.recovery-row').click(function () {
        var employeeId = $(this).closest('tr').data('employeeId');
        var paramObject = {
            url: '@Url.Action("SubmitEmployeeRecovery", "Reference")',
            params: { employeeId: employeeId },
            onSuccess: function (data) {
                $('#employeesPillContainer').html(data);
            }
        }
        removeRecovery(paramObject);
    });

    $('#employeesPillContainer table td button.remove-row').click(function () {
        var employeeId = $(this).closest('tr').data('employeeId');
        $.ajax({
            type: 'POST',
            url: '@Url.Action("SubmitEmployeeDelete", "Reference")',
            data: { employeeId: employeeId },
            success: function (data) {
                successDelete();
                $('#employeesPillContainer').html(data);
            }
        });
    });

            // Добавляем возможность выбора строки в таблице
            $('.route-table tr:not(.thead-row, .foot-row)').click(function () {
                    $(this).siblings('tr:not(.thead-row)').removeClass('active');
                    $(this).addClass('active');
            });
</script>

