@model  ReceptionCentreNew.Models.ServicesSubCustomerResponse
<div class="tab-content">
    <div class="tab-pane active" id="customers">
        @if (Model.Customers.Any())
        {
            <ul style="padding-left:10px;">
                @foreach (var item in Model.Customers.GroupBy(g => g.CustomerSnils).Select(g => g.First()))
                {
                    <li style="margin-bottom: 3px;">
                        <div>
                            <h4 class="mt-0 mb- header-title"><b>@item.CustomerFio</b></h4>
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2">
                                    <small>
                                        <b>Пол:</b> @item.CustomerSex <b>Дата рождения:</b> @item.DocumentBirthDate.Value.ToShortDateString() <b>Email:</b> @item.CustomerEmail
                                        <small><b>Адрес:</b> @item.CustomerAddress</small>
                                        <b>СНИЛС:</b> <span class="snils">
                                            <u>
                                                @if (item.CustomerSnils != null)
                                                {
                                                    Ajax.ActionLink(item.CustomerSnils ?? "", "GetCustomerCases", "Api", new { snils = item.CustomerSnils ?? "#" }, new AjaxOptions { UpdateTargetId = "cases", OnBegin = "$('#cases').html('... ждите')" });
                                                }
                                            </u>
                                        </span>
                                    </small>
                                </li>
                            </ul>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <div>
                <span><strong><i class="icon-info"></i></strong> Не найдено.</span>
            </div>
        }
    </div>
    <div class="tab-pane" id="cases">

    </div>
</div>
<script>
    $('.snils').click(function () {
        $('#cases').addClass('active');
        $('#customers').removeClass('active');
    });
    $(document).on('click', '#back-to-customers', function () {
        $('#cases').removeClass('active');
        $('#customers').addClass('active');
    });

</script>