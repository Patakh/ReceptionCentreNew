@model ReceptionCentreNew.Domain.Concrete.data_appeal
    <script>
        $(document).ready(function () {
            $('#EditAppealForm').validate();
            $(".select2").select2();
        });
    </script>
<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title mt-0">Редактирование обращения</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">

            @using (Html.BeginForm("SubmitNewAppealSave", "Appeal", FormMethod.Post, new { @id = "EditAppealForm", @class = "form-horizontal" }))
            {
                <input type="hidden" name="id" value="@Model.id" />
                <div class="row">
                    <div class="col-12">
                        <div class="card-box mb-5">
                            <div class="form-group row">
                                @Html.LabelFor(model => model.applicant_name, new Dictionary<string, object> { { "class", "col-md-4 col-xl-4 col-form-label" } })
                                <div class="col-md-6 col-xl-6">
                                    @Html.TextBoxFor(model => model.applicant_name, new Dictionary<string, object> { { "class", "form-control required" }, { "placeholder", Html.DisplayNameFor(model => model.applicant_name) } })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.phone_number, new Dictionary<string, object> { { "class", "col-md-4 col-xl-4 col-form-label" } })
                                <div class="col-md-6 col-xl-6">
                                    @Html.TextBoxFor(model => model.phone_number, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", "номер телефона" } })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.email_, new Dictionary<string, object> { { "class", "col-md-4 col-xl-4 col-form-label" } })
                                <div class="col-md-6 col-xl-6">
                                    @Html.TextBoxFor(model => model.email_, new Dictionary<string, object> { { "class", "form-control email" } })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.text_appeal, new Dictionary<string, object> { { "class", "col-md-4 col-xl-4 col-form-label" } })
                                <div class="col-md-6 col-xl-6">
                                    @Html.TextAreaFor(model => model.text_appeal, new Dictionary<string, object> { { "class", "form-control no-resize required" }, { "rows", "5" }, { "placeholder", Html.DisplayNameFor(model => model.text_appeal) } })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.spr_mfc_id, new Dictionary<string, object> { { "class", "col-md-4 col-xl-4 col-form-label" } })
                                <div class="col-md-6 col-xl-6">
                                    @Html.DropDownListFor(model => model.spr_mfc_id, ViewBag.SprMfc as SelectList, "Не выбрано", new Dictionary<string, object> { { "class", "form-control select2" } })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.case_number, new Dictionary<string, object> { { "class", "col-md-4 col-xl-4 col-form-label" } })
                                <div class="col-md-6 col-xl-6">
                                    @Html.TextBoxFor(model => model.case_number, new Dictionary<string, object> { { "class", "form-control" }, { "placeholder", "номер обращения в МФЦ" } })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.spr_category_id, new Dictionary<string, object> { { "class", "col-md-4 col-xl-4 col-form-label" } })
                                <div class="col-md-6 col-xl-6">
                                    @Html.DropDownListFor(model => model.spr_category_id, ViewBag.SprCategory as SelectList, new Dictionary<string, object> { { "class", "form-control select2-nosearch" } })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.spr_subject_treatment_id, new Dictionary<string, object> { { "class", "col-md-4 col-xl-4 col-form-label" } })
                                <div class="col-md-6 col-xl-6">
                                    @Html.DropDownListFor(model => model.spr_subject_treatment_id, ViewBag.SprSubjectTreatment as SelectList, new Dictionary<string, object> { { "class", "form-control select2-nosearch" } })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.spr_type_id, new Dictionary<string, object> { { "class", "col-md-4 col-xl-4 col-form-label" } })
                                <div class="col-md-6 col-xl-6">
                                    @Html.DropDownListFor(model => model.spr_type_id, ViewBag.SprType as SelectList, new Dictionary<string, object> { { "class", "form-control select2-nosearch" } })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.spr_type_difficulty_id, new Dictionary<string, object> { { "class", "col-md-4 col-xl-4 col-form-label" } })
                                <div class="col-md-6 col-xl-6">
                                    @Html.DropDownListFor(model => model.spr_type_difficulty_id, ViewBag.SprTypeDifficulty as SelectList, new Dictionary<string, object> { { "class", "form-control select2-nosearch" } })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary waves-effect waves-light" data-dismiss="modal">Закрыть</button>
            <button type="submit" id="btn_submit_edit_appeal" form="EditAppealForm" class="btn btn-primary waves-effect waves-light">Сохранить <i class="fa fa-check m-l-5"></i></button>
        </div>
        @*<div class="modal-footer">
                <button type="button" class="btn btn-cancel waves-effect waves-light" data-dismiss="modal"><i class="fa fa-times m-r-5"></i> Отмена</button>
                <button type="submit" id="btn_submit_edit_appeal" form="EditAppealForm" class="btn btn-success waves-effect waves-light btn-block-xs"> Сохранить <i class="fa fa-check m-l-5"></i></button>
            </div>*@
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
