@model ReceptionCentreNew.Domain.Concrete.spr_employees_message_template
<script>
    $('#AddMessageTemplatesForm').validate();
</script>

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title mt-0">Добавление шаблона сообщения</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @using (Ajax.BeginForm("SubmitEmployeesMessageTemplateSave", "Appeal",  Model, new AjaxOptions { UpdateTargetId = "newModal", OnSuccess = "$('#newModal').modal('show'); successAdd();" }, new { @id = "AddMessageTemplatesForm", @class = "form-horizontal" }))
            {
                <input type="hidden" name="number" value="@ViewBag.AppealNumber" />
                <div class="form-group form-group-sm">
                    <div class="row">
                        @Html.LabelFor(model => model.message_text, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                        <div class="col-md-6">
                            @Html.TextAreaFor(model => model.message_text, new Dictionary<string, object> { { "class", "form-control required" }, { "placeholder", Html.DisplayNameFor(model => model.message_text) } })
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="row">
                        @Html.LabelFor(model => model.sort, new Dictionary<string, object> { { "class", "col-md-4 control-label text-right" } })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.sort, new Dictionary<string, object> { { "class", "form-control required" }, { "placeholder", Html.DisplayNameFor(model => model.sort) }, { "type", "number" }, })
                        </div>
                    </div>
                </div>
            }
            <div class="modal-footer">
                @using (Ajax.BeginForm("PartialTableEmployeesMessageTemplate", "Appeal", new {number=ViewBag.AppealNumber }, new AjaxOptions { UpdateTargetId = "newModal" }, new { @id = "backToMessageTemplates", @class = "" }))
                {
                    <button type="submit" class="btn btn-secondary waves-effect waves-light">Назад</button>
                }
                <button type="submit" form="AddMessageTemplatesForm" class="btn btn-primary waves-effect waves-light">Добавить</button>
            </div>
        </div>
    </div>
</div>