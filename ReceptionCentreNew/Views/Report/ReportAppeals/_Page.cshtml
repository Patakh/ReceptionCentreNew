@model ReportParameters
@{
    ViewBag.Title = "Отчет по обращениям";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/new_design/plugins/footable/css/footable.core.css" rel="stylesheet" />
@* @Html.MvcSiteMap().SiteMapPath() *@
<div class="card-box">
    <h4>Реестр обращений</h4>
    <div class="card-box m-t-10 p-t-10 p-b-10">

        <form id="reportForm" class="form-horizontal">
            <div class="collapse show" id="collapseExample" style="">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group form-group-sm form-actions m-b-0">
                            <div class="row p-l-r-10">
                                <div class="col-md-3 m-b-10">
                                    <label class="font-12 text-muted p-t-0 m-b-0">Сотрудник</label>
                                    @if (User.IsInRole("superadmin") || User.IsInRole("admin") || User.IsInRole("operator"))
                                    {
                                        @Html.DropDownList(nameof(Model.SprEmployeeId), ViewBag.SprEmployees as SelectList, "Все", new Dictionary<string, object> { { "class", "select2 input-sm" } })
                                    }
                                    else
                                    {
                                        @Html.DropDownList(nameof(Model.SprEmployeeId), ViewBag.SprEmployees as SelectList, "Все", new Dictionary<string, object> { { "class", "select2 input-sm" } })
                                    }
                                </div>
                                <div class="col-md-3 m-b-10">
                                    <label class="font-12 text-muted p-t-0 m-b-0">Период</label>
                                    @Html.DropDownList(nameof(Model.Period), new SelectList(new List<SelectListItem>
                                    { new SelectListItem {Text = "Сегодня", Value = "1"},
                                    new SelectListItem {Text = "Неделя", Value = "2"},
                                    new SelectListItem {Text = "Месяц", Value = "3"},
                                    new SelectListItem {Text = "Год", Value = "4"},
                                    }, "Value", "Text"), "Все", new Dictionary<string, object> { { "class", "select2 input-sm" } })
                                </div>
                                <div class="col-md-3 m-b-10">
                                    <label class="font-12 text-muted p-t-0 m-b-0">Статус</label>
                                    @Html.DropDownList(nameof(Model.SprStatusId), ViewBag.SprStatus as SelectList, "Все", new Dictionary<string, object> { { "class", "select2 input-sm" } })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group form-group-sm form-actions m-b-0">
                            <div class="row p-l-r-10">
                                <div class="col-md-3 m-b-10">
                                    <label class="font-12 text-muted p-t-0 m-b-0">Тип</label>
                                    @Html.DropDownList(nameof(Model.SprTypeId), ViewBag.SprType as SelectList, "Все", new Dictionary<string, object> { { "class", "select2 input-sm" } })
                                </div>
                                <div class="col-md-3 m-b-10">
                                    <label class="font-12 text-muted p-t-0 m-b-0">Тип сложности</label>
                                    @Html.DropDownList(nameof(Model.SprTypeDifficultyId), ViewBag.SprTypeDifficulty as SelectList, "Все", new Dictionary<string, object> { { "class", "select2 input-sm" } })
                                </div>
                                <div class="col-md-3 m-b-10">
                                    <label class="font-12 text-muted p-t-0 m-b-0">Предмет обращения</label>
                                    @Html.DropDownList(nameof(Model.SprSubjectId), ViewBag.SprSubject as SelectList, "Все", new Dictionary<string, object> { { "class", "select2 input-sm" } })
                                </div>
                                <div class="col-md-3 m-b-10">
                                    <label class="font-12 text-muted p-t-0 m-b-0">Категория</label>
                                    @Html.DropDownList(nameof(Model.SprCategoryId), ViewBag.SprCategory as SelectList, "Все", new Dictionary<string, object> { { "class", "select2 input-sm" } })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="m-t-10 m-b-10" />
            </div>


            <div class="row">
                <div class="col">
                    <button class="btn btn-link text-left col-sm-4" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="true" aria-controls="collapseExample">
                        <i class="ti-arrow-circle-up font-18 vertical-middle mr-1 collapse-state-active"></i>
                        <span class="hide-phone vertical-middle collapse-state-active">Свернуть фильтр</span>
                        <i class="ti-arrow-circle-down font-18 vertical-middle mr-1 collapse-state-collapsed"></i>
                        <span class="hide-phone vertical-middle collapse-state-collapsed">Развернуть фильтр</span>
                    </button>
                </div>
                <div class="col text-right">
                    <button type="button" onclick="IncomingReport()" class="btn btn-default waves-effect waves-light">
                        <i class="ion-ios7-search m-r-5"></i>
                        Найти
                    </button>

                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle waves-effect waves-light" data-toggle="dropdown" aria-expanded="false"> Действия <span class="caret"></span></button>
                        <ul class="dropdown-menu dropdown-menu-right" role="menu">
                            <li class="dropdown-item"><a onclick="printTable()"><i class="fa fa-print m-r-5"></i> Печать</a></li>
                            <li class="dropdown-item"><a onclick="downloadTableExcel()"><i class="fa fa-file-excel-o" aria-hidden="true"></i> Скачать в Excel</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div id="appealsTableContainer">
    </div>
</div>
@section scripts {
    <script src="~/new_design/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/new_design/plugins/datatables/dataTables.bootstrap.js"></script>
    <script src="~/plugins/print/printThis.js"></script>
}

<script>
    function IncomingReport() {
        $.ajax({
            type: "POST",
            url: "/Report/ReportAppealsTable",
            data: $("#reportForm").serialize(),
            success: function (data) {
                $('#appealsTableContainer').html(data);
                $('.btn-print').show();
            },
            error: function () {
                // Handle error
            }
        });
    }
    function printTable() {
        $('#printable').printThis({
            debug: false,
            importCSS: false,
            importStyle: false,
            printContainer: true,
            loadCSS: "~/new_design/css/new_print.css",
            pageTitle: "",
            removeInline: false,
            printDelay: 333,
            header: null,
            formValues: true
        });
    }

    function downloadTableExcel() {
        location.href = '@Url.Action("DownloadExcelReportAppeals", "Report")?' + $('.form-horizontal').serialize();
    }
</script>